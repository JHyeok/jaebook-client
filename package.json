{
  "name": "jaebook-client",
  "version": "1.0.0",
  "description": "My unreal Nuxt.js project",
  "author": "JHyeok",
  "private": true,
  "config": {
    "nuxt": {
      "host": "0.0.0.0",
      "port": "8081"
    }
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt-ts",
    "build": "nuxt-ts build",
    "start": "cross-env NODE_ENV=production nuxt-ts start",
    "generate": "nuxt-ts generate",
    "lint": "eslint --ext .ts,.js,.vue . --ignore-path .gitignore .",
    "prestart": "nuxt-ts build",
    "test": "jest"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.3.6",
    "@nuxtjs/auth": "github:nuxt-community/auth-module#feat/refresh",
    "@nuxtjs/axios": "^5.9.5",
    "@nuxtjs/toast": "^3.3.0",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0",
    "js-cookie": "^2.2.1",
    "nuxt": "^2.0.0",
    "socket.io-client": "^2.3.0",
    "vue-infinite-loading": "^2.4.4",
    "vue-socket.io-extended": "^4.0.1"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.5.5",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/moment": "^1.6.0",
    "@types/jest": "^24.0.25",
    "@types/js-cookie": "^2.2.4",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "jest": "^24.1.0",
    "ts-jest": "^24.2.0",
    "vue-class-component": "^7.2.3",
    "vue-jest": "^4.0.0-0"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "setupFilesAfterEnv": [
      "./test/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "vue",
      "json"
    ],
    "testRegex": "(test|spec)\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/**/*.vue"
    ]
  }
}
